VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Frontend -> Data Gateway
VITE_ENABLE_GATEWAY=true
# Leave empty when serving frontend + API from the same server/port.
VITE_GATEWAY_URL=
VITE_GATEWAY_ADMIN_KEY=admin-local-key

# Backend gateway (server/index.mjs)
SERVE_FRONTEND=true
CRICKETDATA_API_KEY=YOUR_CRICAPI_KEY
ODDS_API_KEY=
ADMIN_API_KEY=admin-local-key
POLL_INTERVAL_MS=30000
MAX_USER_EXPOSURE=50000
MAX_MATCH_EXPOSURE=250000
# Starting balance for new users (Rs)
STARTING_BALANCE=100

# Supabase server-side credentials (for JWT verification & withdrawal management)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Testing: Set to 'true' to bypass authentication and use hardcoded 'user-123'
# This allows testing persistence without OAuth/auth. DO NOT USE IN PRODUCTION!
DISABLE_AUTH_FOR_TESTING=false

# Logging
LOG_LEVEL=info

# Rate limiting (trade endpoints)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
# Dcric99 live odds provider (enabled by default)
DCRIC99_ENABLED=true
# Optional overrides:
# DCRIC99_EVENT_LIST_URL=https://api.dcric99.com/api/guest/event_list
# DCRIC99_EVENT_DETAIL_URL=https://api.dcric99.com/api/guest/event
# DCRIC99_DEFAULT_ODDS_BASE_URL=https://api.dcric99.com
# DCRIC99_CONCURRENCY=6
# DCRIC99_MAX_EVENT_DETAILS=60
# DCRIC99_MIN_SCORE=0.75
# Optional scraper providers:
# ODDS_SCRAPER_SITES_JSON=[{"name":"site-a","url":"https://example.com/odds","format":"html","eventSelector":".event","homeSelector":".home","awaySelector":".away","homeOddsSelector":".home-odds","awayOddsSelector":".away-odds"}]

# Live cricket feed (CricAPI)
VITE_CRICKETDATA_API_KEY=YOUR_CRICAPI_KEY

# Live odds feed (The Odds API, optional if you want bookmaker prices)
VITE_ODDS_API_KEY=
VITE_ODDS_REGIONS=uk
# Optional comma-separated override, for example:
# VITE_ODDS_CRICKET_SPORTS=cricket_ipl,cricket_t20_international
VITE_ODDS_MAX_SPORTS=4
